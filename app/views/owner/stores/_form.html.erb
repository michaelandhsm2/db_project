<%= form_for [:owner, store] do |f| %>
  <%= render 'shared/error_messages', item: store %>

  <%= f.label :name, "店名" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :address, "地址" %>
  <%= f.text_field :address, class: 'form-control' %>

  <%= f.label :email, "電子信箱" %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :phone, "聯絡電話 (可不填)" %>
  <%= f.text_field :phone, class: 'form-control' %>

  <%= f.label :description, "詳細介紹 (可不填)" %>
  <%= f.text_area :description, size: "60x8", class: 'form-control' %>

  <%= f.label :image, "店舖照片 (可不填)"  %>
  <%= f.file_field :image, class: 'form-control'  %>
  <%= f.hidden_field :image_cache %>
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
    <%= f.label :remove_image, class: 'checkbox' do %>
       <%= f.check_box :remove_image %>
       Remove Image
    <% end %>
  <% end %>


  <% user_options = []%>
  <% User.all.each do |s|%>
    <% if s.is_owner == true%>
      <% user_options << [s.name, s.id] %>
    <% end %>
    <% user_options.sort! %>
  <% end%>
  <% selected_options = store.user_ids %>
  <% selected_options << store.owner.id %>
  <% selected_options << current_user.id %>
  <% selected_options.uniq! %>
  <%= f.label :user_ids, "員工" %>
  <%= f.select(:user_ids, options_for_select(user_options, selected: selected_options, disabled: store.owner.id), {}, :multiple => true, id: 'optgroup') %>

  <%= f.submit "確認送出", class: "btn btn-primary" %>
<% end %>
