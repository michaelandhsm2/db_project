
  <%= render 'shared/error_messages', item: item %>

  <%= f.label :name, "品名" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :price, "價格" %>
  <%= f.number_field :price, class: 'form-control' %>

  <%= f.label :tag_list, "標籤" %>
  <%= f.text_field :tag_list, value: f.object.tag_list.to_s, id: 'myTags'%>

  <%= f.label :quantity, "庫存數量" %>
  <%= f.number_field :quantity, class: 'form-control' %>

  <%= f.label :description, "詳細介紹 (可不填)" %>
  <%= f.text_area :description, size: "60x8", class: 'form-control' %>

  <%= f.label :image, "商品照片"  %>
  <%= f.file_field :image, class: 'form-control'  %>
  <%= f.hidden_field :image_cache %>
  <% if f.object.image? %>
    <%= image_tag f.object.image.thumb.url %>
    <%= f.label :remove_image, class: 'checkbox' do %>
       <%= f.check_box :remove_image %>
       Remove Image
    <% end %>
  <% end %>

  <%= f.submit "確認送出", class: "btn btn-primary" %>
