<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "八肚夭網路購物平台", home_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "首頁", home_path %></li>
        <li><%= link_to "關於我們", about_path %></li>
        <li><%= link_to "商品列表", items_path %></li>
        <li><%= link_to "商店", stores_path %></li>
        <% if logged_in? %>
          <% if !current_user.is_admin %>
            <li class="cart-text"><%= render 'layouts/cart_text' %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Hello, <%= current_user.name %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "會員資料編輯", edit_user_path(current_user) %></li>
              <li><%= link_to "消費歷史紀錄", user_orders_path(current_user) %></li>
              <li class="divider"></li>
              <% if current_user.is_owner %>
                <li><%= link_to "商家訂單顯示", owner_orders_path %></li>
                <li><%= link_to "商家優惠管理", owner_events_path %></li>
                <li class="divider"></li>
              <% end %>
              <% if current_user.is_admin %>
                <li><%= link_to "會員列表檢視", admin_users_path %></li>
                <li><%= link_to "會員訂單管理", admin_orders_path %></li>
                <li class="divider"></li>
              <% end %>
              <li>
                <%= link_to "登出", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "會員登入", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
